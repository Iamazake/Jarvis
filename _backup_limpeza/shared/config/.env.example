# ========================================
# JARVIS - Configuração Centralizada
# ========================================
# Copie este arquivo para .env e configure

# ========================================
# OpenAI
# ========================================
OPENAI_API_KEY=sk-sua-chave-aqui
OPENAI_MODEL=gpt-4o-mini

# ========================================
# Portas dos Serviços
# ========================================
PORT_WHATSAPP=3001
PORT_API=5000
PORT_SCHEDULER=5002
PORT_MONITORS=5003

# ========================================
# Seu Número (para receber alertas)
# ========================================
OWNER_NUMBER=5511999999999

# ========================================
# Banco de Dados
# ========================================
DATABASE_PATH=./data/jarvis.db

# ========================================
# Cache FAISS
# ========================================
FAISS_INDEX_PATH=./data/faiss_index
FAISS_SIMILARITY_THRESHOLD=0.85

# ========================================
# Logging
# ========================================
LOG_LEVEL=info
LOG_FILE=./logs/jarvis.log

# ========================================
# Modo de Operação
# ========================================
# development | production
NODE_ENV=development

# ========================================
# Auto Reply (Modo Autônomo)
# ========================================
AUTO_REPLY_ENABLED=true
AUTO_REPLY_DELAY_MS=2000
